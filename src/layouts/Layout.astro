---
import MainHead from '../components/MainHead.astro';
import HeaderNav from '../components/HeaderNav.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string | undefined;
	description?: string | undefined;
}

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<MainHead title={title} description={description} />
		<link
		rel="stylesheet"
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
	</head>
	<body>
		<div class="stack backgrounds">
			<HeaderNav />
			<slot />
			<Footer />
		</div>

		<script>
			addEventListener('load', () => document.documentElement.classList.add('loaded'));
		</script>

		<style>
			:root {
				.backgrounds{
					background: -webkit-linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
					background: linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
				}
				.texto-pizarra{
					color: black;
				}	
				.texto-general {
					color: #333333;
				}

				.backg {
					background: -webkit-linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
					background: linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
					border-top:1px solid #b122f3;
				}

				
				.menu-footer{
					background: -webkit-linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
					background: linear-gradient(90deg, #efc3e6,#dee2ff,#feeafa);
				}

				select {
					background-color: transparent;
					color:#9ca3af;
				}

				@media screen and (min-width: 769px) {
					.backg {
						background: transparent;
						border-top:1px solid transparent;
					}

					.menu-footer {
						background: transparent;
					}
				}

				.feature {
					background: #b388dd;
					cursor: pointer;
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}

				.feature:hover {
					background: #9269bc;
				}

				.navbar__link {
					color: #373737;
				}
				.navbar__link:hover {
					color: black; 
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}

				.navbar__link:after {
					position: absolute;
					content: "";
					background-color: #b122f3;
					height: 3px;
					width: 100%;
					bottom: -5px;
					left: 0;
					scale: 0;
					transform-origin: left;
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}

				.navbar__link:hover::after {
					scale: 1;
				}
			}

			:root.theme-dark {
				.backgrounds{
					background: -webkit-linear-gradient(90deg, #090f30,#000000,#190631);
					background: linear-gradient(90deg, #090f30,#000000,#190631);
				}

				.texto-pizarra{
					color: white;
				}
				.texto-general {
					color: #e0e0e0;
				}

				select {
					background-color:#18151b;
					color:#9ca3af;
				}
				.backg {
					background: -webkit-linear-gradient(90deg, #090f30,#000000,#190631);
					background: linear-gradient(90deg, #090f30,#000000,#190631);
				}
				.menu-footer{
					background: -webkit-linear-gradient(90deg, #090f30,#000000,#190631);
					background: linear-gradient(90deg, #090f30,#000000,#190631);
				}

				@media (min-width: 768px) {
						.backg {
								background: transparent;
						}
						.menu-footer {
						background: transparent;
					}
				}

				.feature {
					background: #7611a6;
					cursor: pointer;
				}

				.feature {
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}
				.feature:hover {
					background: #5d0d82;
				}


				.navbar__link:hover {
					color: white;
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}
				.navbar__link {
					color: rgb(209, 209, 209);
				}
				.navbar__link:after {
					position: absolute;
					content: "";
					background-color: #b122f3;
					height: 3px;
					width: 100%;
					bottom: -5px;
					left: 0;
					scale: 0;
					transform-origin: left;
					transition: all 0.4s;
					-webkit-transition: all 0.4s;
					-moz-transition: all 0.4s;
					-ms-transition: all 0.4s;
					-o-transition: all 0.4s;
				}

				.navbar__link:hover::after {
					scale: 1;
				}
			}

			:root.loaded {

			}
			:root.loaded.theme-dark {

			}


			.backgrounds {
				min-height: 100%;
				isolation: isolate;
			}
		</style>
	</body>
</html>
